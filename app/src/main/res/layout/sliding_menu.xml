<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222" >

    <RelativeLayout
        android:id="@+id/sliding_menu_search"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/sliding_menu_noclick_background" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select Option"
            android:textColor="@color/items_text_color"
            android:textSize="18sp"
            android:gravity="center"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#CCCCCC" />
    </RelativeLayout>



    <RelativeLayout
        android:clickable="true"
        android:id="@+id/sliding_menu_news"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sliding_panel_item_height"
        android:layout_marginTop="70dp"
        android:background="@drawable/sl_sliding_menu_section"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sliding_menu_items_icon_left_margin"
        android:paddingRight="@dimen/sliding_menu_items_icon_left_margin" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sliding_panel_item_icon_height"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/sliding_panel_item_icon_maxwidth"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sliding_menu_items_text_left_margin"
            android:text="News"
            android:textColor="@color/items_text_color"
            android:textSize="18sp"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_below="@+id/sliding_menu_schedule"
        android:id="@+id/sliding_menu_source"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sliding_panel_item_height"
        android:background="@color/sliding_menu_noclick_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sliding_menu_items_icon_left_margin"
        android:paddingRight="@dimen/sliding_menu_items_icon_left_margin" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sliding_panel_item_icon_height"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/sliding_panel_item_icon_maxwidth"
             />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sliding_menu_items_text_left_margin"
            android:text="Standings"
            android:textColor="@color/items_text_color"
            android:textSize="18sp"
        />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sliding_menu_source_options"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliding_menu_source"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/sliding_menu_tv_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/sliding_panel_item_height"
            android:background="@drawable/sl_sliding_menu_option"
            android:clickable="true" >

            <TextView
                android:id="@+id/sliding_menu_source_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/items_text_color_light"
                android:layout_marginLeft="@dimen/sliding_menu_items_text_options_left_margin"
                android:text="Europe"
                android:textSize="16sp"
       />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/menu_esq_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sliding_menu_vod_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/sliding_panel_item_height"
            android:background="@drawable/sl_sliding_menu_option"
            android:clickable="true" >

            <TextView
                android:id="@+id/sliding_menu_source_vod"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/items_text_color_light"
                android:layout_marginLeft="@dimen/sliding_menu_items_text_options_left_margin"
                android:text="North America"
                android:textSize="16sp"
/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/menu_esq_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sliding_menu_schedule"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sliding_panel_item_height"
        android:layout_below="@+id/sliding_menu_news"
        android:background="@drawable/sl_sliding_menu_section"
        android:orientation="horizontal"
        android:clickable="true"
        android:paddingLeft="@dimen/sliding_menu_items_icon_left_margin"
        android:paddingRight="@dimen/sliding_menu_items_icon_left_margin" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sliding_panel_item_icon_height"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/sliding_panel_item_icon_maxwidth"
             />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sliding_menu_items_text_left_margin"
            android:text="Schedule"
            android:textColor="@color/items_text_color"
            android:textSize="18sp"
           />
    </RelativeLayout>

