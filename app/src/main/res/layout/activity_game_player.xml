<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:gravity="center|left"
        android:text="Player Name"/>


    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:gravity="center|left"
        android:text="11/11/11"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/player_item1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_background"/>
        <ImageView
            android:layout_toRightOf="@+id/player_item1"
            android:id="@+id/player_item2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_background"/>

        <ImageView
            android:layout_toRightOf="@+id/player_item2"
            android:id="@+id/player_item3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_background"/>

        <ImageView
            android:layout_below="@+id/player_item1"
            android:id="@+id/player_item4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_background"/>
        <ImageView
            android:layout_below="@+id/player_item2"
            android:layout_toRightOf="@+id/player_item4"
            android:id="@+id/player_item5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_background"/>

        <ImageView
            android:layout_below="@+id/player_item3"
            android:layout_toRightOf="@+id/player_item5"
            android:id="@+id/player_item6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_background"/>


        </RelativeLayout>


    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:singleLine="true"
        android:text="354"/>


</LinearLayout>